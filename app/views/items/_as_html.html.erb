<% Item::KINDS.each_slice(2) do |pair_of_kinds| %>
    <div class="two-wide">
      <% pair_of_kinds.each do |kind| %>
          <div class="kind">
            <div class="block header">
              <h2 class="title"><%= kind.pluralize %></h2>
              <%= link_to new_standup_item_path(@standup, post_id: @post.try(:id), 'item[kind]' => kind), 'data-kind' => kind do %>
                  <i class="icon-plus-sign"></i>
              <% end %>
            </div>

            <% if items[kind].present? %>
                <% if kind == 'Event' %>
                    <% items[kind].group_by(&:relative_date).each do |group_name, events| %>
                      <h4 class="subheader <%= group_name %>"><%= group_name.capitalize %></h4>
                      <%= render events %>
                    <% end %>
                <% else %>
                    <%= render items[kind] %>
                <% end %>
            <% end %>
          </div>
      <% end %>
    </div>
<% end %>
