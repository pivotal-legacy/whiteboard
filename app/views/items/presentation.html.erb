<section class="slide">
  <h1>Standup<br>
  <%= Time.now.strftime("%m/%d/%y") %></h1>
  <div class='footer'>
    <p>
      <%= link_to 'Exit', standup_items_path(@standup), class: 'btn btn-large btn-primary exit-presentation' %>
    </p>
  </div>
</section>

<% Item::KINDS.each do |kind| %>
  <section class="slide">
    <h2><%= kind.pluralize %></h2>
    <% if @items[kind] %>
      <% if kind == 'Event' %>
        <% @items[kind].group_by(&:relative_date).each do |group_name, events| %>
          <h3 class="<%= group_name %>"><%= group_name.capitalize %></h3>
          <ul>
            <%= render partial: 'presentation_item', collection: events %>
          </ul>
        <% end %>
      <% else %>
          <ul>
            <%= render partial: 'presentation_item', collection: @items[kind] %>
          </ul>
      <% end %>
    <% end %>
    <div class='footer'>
      <p>
        <%= link_to 'Exit', standup_items_path(@standup), class: 'btn btn-large btn-primary exit-presentation' %>
      </p>
    </div>
  </section>
<% end %>

<section class="slide">
  <h1><%= standup_closing %></h1>
  <div class='footer'>
    <p>
      <%= link_to 'Exit', standup_items_path(@standup), class: 'btn btn-large btn-primary exit-presentation' %>
    </p>
  </div>
</section>
