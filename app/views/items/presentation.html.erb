<section class="slide">
  <h1>Standup<br>
  <%= Time.now.strftime("%m/%d/%y") %></h1>
</section>
<% Item::KINDS.each do |kind| %>
  <section class="slide">
    <h2><%= kind.pluralize %></h2>
    <% if @items[kind] %>
      <ul>
      <% @items[kind].each do |item| %>
        <li><%= format_title(item) %></li>
      <% end %>
      </ul>
    <% end %>
  </section>
<% end %>

<section class="slide">
  <h1><%= standup_closing %></h1>
</section>
